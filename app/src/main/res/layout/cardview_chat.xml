<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/cardview_layout_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"></androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/kullaniciLogo"
                android:layout_width="@dimen/cardview_kullaniciLogo_layout_width"
                android:layout_height="@dimen/cardview_kullaniciLogo_layout_height"
                android:layout_marginStart="@dimen/cardview_kullaniciLogo_marginStart"
                android:layout_marginTop="@dimen/cardview_kullaniciLogo_marginTop"
                android:layout_marginBottom="@dimen/cardview_kullaniciLogo_marginBottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/kullaniciAdi"
                android:layout_width="@dimen/cardview_kullaniciAdi_layout_width"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/cardview_kullaniciAdi_marginStart"
                android:layout_marginEnd="@dimen/cardview_kullaniciAdi_marginEnd"
                android:textSize="@dimen/cardview_kullaniciAdi_textSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/kullaniciLogo"
                app:layout_constraintTop_toTopOf="@+id/kullaniciLogo"
                tools:text="Kullanıcı Adı" />

            <TextView
                android:id="@+id/kullaniciMesaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:textSize="@dimen/cardview_kullaniciIcon_textSize"
                app:layout_constraintStart_toStartOf="@+id/kullaniciAdi"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciAdi"
                tools:text="Kullanıcı Mesaj" />
</androidx.constraintlayout.widget.ConstraintLayout>